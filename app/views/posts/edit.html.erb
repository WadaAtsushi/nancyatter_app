<div class="container w-75 mt-5">
  <%= tag.h1 "#{@post.title}の編集ページ" %>
    <%= form_for(@post, url: post_update_path(@post.id)) do |f| %>
      <%= f.label :title, class: "mt-3" %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :cntetnt, class:"mt-3" %>
      <%= f.text_area :content, class: "form-control" %>
      <%= f.label :image, class:"mt-3" %>
      <%= tag.div f.file_field  :image, class: "mt-3" %>
      <%= f.submit :"編集", data: {confirm: "入力した内容で更新します。よろしいですか？"} , class: "btn btn-primary mt-3" %>
    <% end %>
</div>