<div class="container-fluid" >
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-8 mb-6 mt-6" >
      <%= tag.h1 "投稿一覧", class:"border-bottom pb-3 mt-2" %>
        <% @posts.each do |post| %>
          <% if post.del_flag!=1 %>
            <div class="d-sm-flex flex-sm-wrap justify-content-center mt-3 border-bottom">
              <div class="m-2 mx-md-4">
                <%= link_to((image_tag post.menbur.profile_image.url, class:"row", style:"width:80px;border-radius:30%;"),menbur_show_path(post.menbur.id)) %>
                <%= link_to(post.menbur.nickname, menbur_show_path(post.menbur.id), class:"mb-0 mx-0.5") %>
              </div>
              <div class="m-2 mt-md-0 mt-3 mx-md-5">
                <% if @current_menbur %>
                  <%= link_to("#{post.title} / #{post.postcategory.category_name}", post_show_path(post.id), class:"mb-0") %>
                <% else %>
                  <%= tag.p "#{post.title} / #{post.postcategory.category_name}", class:"mb-0" %>
                <% end %>
                <%= tag.p post.content, class:"mb-0" %>
                <%= tag.p "♡#{Like.where(post_id: post.id).count}", class:"mb-3" %>
              </div>
              <div class="mx-md-5">
                <%= image_tag post.post_image.url, class:"img-fluid mb-3", style:"width:200px;" %>
              </div>
            </div>
          <% end %>
        <% end %> 
      <%= paginate @posts%>
    <div>
  </div>
</div>
