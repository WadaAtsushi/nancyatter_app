<div class="container w-75 mt-5">
  <%= tag.h1 "投稿一覧" %>
    <table class="table">
      <thead>
        <%= tag.tr %>
          <%= tag.th "image" %>
          <%= tag.th "user" %>
          <%= tag.th "title" %>
          <%= tag.th "content" %>
      </thead>
      　
      <tbody>
        <% @posts.each do |post| %>
          <% if post.del_flag!=1 %>
            <%= tag.tr %>
              <%= tag.td image_tag post.image.url, class: "post-index-image" %>
              <%= tag.td post.user.name %>
              <%= tag.td link_to("#{post.title}", post_show_path(post.id) ) %>
              <%= tag.td link_to("#{post.content}", post_show_path(post.id) ) %>
          <% end %>
        <% end %>    
      </tbody>
    </table>

    <%= paginate @posts%>
</div>
