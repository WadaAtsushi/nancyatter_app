<div class="container w-75 mt-5">
  <%= tag.h1 "新規投稿" %>
    <%= form_for(@post, url: post_create_path) do |f| %>
      <%= f.label :title, class: "mt-3" %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :content, class: "mt-3" %>
      <%= f.text_area :content, class: "form-control" %>
      <%= tag.div f.label :image, class: "mt-3" %>
      <%= f.file_field :image %>
      <%= tag.div f.submit :"投稿", class: "btn btn-primary mt-3" %>
    <% end %>
</div>
