<div class="container w-75 mt-5 ">
  <%= tag.h1 "メンバー登録" %>
    <%= form_for(@menbur, url: menbur_create_path) do |f| %>
      <%= f.label :"ニックネーム", class: "mt-2 " %>
      <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネームを入力してください" %>
      <%= f.label :"プロフィール", class: "mt-2"  %>
      <%= f.text_area :profile, class: "form-control", placeholder: "プロフィールを入力してください" %>
      <%= tag.div f.label :"プロフィール画像", class: "mt-3" %>
      <%= f.file_field :profile_image %>
      <%= tag.div f.submit :"メンバー登録", class: "btn btn-primary mt-3"  %>

    <% end %>
</div>