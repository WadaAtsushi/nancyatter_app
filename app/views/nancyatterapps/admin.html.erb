<div class="container-fluid" >
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 mb-5 mt-5" >
      <%= tag.h1 "アプリ管理", class:"mt-2" %>
      <div class="accordion" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne" >
            <button class="accordion-button bg-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <%= tag.h4 "アプリ情報", class:"text-white font-weight-bold" %>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body" style = "background: rgb(235, 255, 255);">
      　　　　　<%= tag.div "アプリ名： #{@nancyatterapp.app_name}" %>
              <%= tag.div "メインテキスト： #{@nancyatterapp.main_text}" %>
      　　　　　<%= tag.div "カテゴリー： #{@appcategory.category_name}" %>
              <%= tag.div "アプリ紹介： #{@nancyatterapp.introduction}" %>
      　　　　　<%= tag.div "利用ルール： #{@nancyatterapp.loure}" %>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed bg-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              <%= tag.h4 "投稿カテゴリーの追加", class:"text-white font-weight-bold" %>
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body" style = "background: rgb(235, 255, 255);">
              <%= tag.h4 "投稿カテゴリー追加" %>
                <%= form_for(@postcategory, url: postcategory_create_path) do |f| %>
                <%= f.text_field :category_name, class: "form-control", placeholder: "15文字以内で入力してください。" %>
                <%= tag.div f.submit :"追加", class: "btn btn-primary mt-3" %>
                <% end %>
              <%= tag.h4 "投稿カテゴリー削除", class: "mt-5" %>
                <%= form_for(@postcategory, url: postcategory_destroy_path) do |f| %>
                <%= f.collection_select :id, Postcategory.where(nancyatterapp_id: @current_app.id), :id, :category_name, {include_blank: "選択してください"},{class: "form-control input-sm"} %>
              　<%= tag.div f.submit :"削除", class: "btn btn-primary" %>　
                <% end %>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed  bg-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
              <%= tag.h4 "設定変更", class:"text-white font-weight-bold" %>
            </button>
          </h2>
          <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body" style = "background: rgb(235, 255, 255);">
              <%= tag.h3 "アプリ設定変更" %>
                  <%= form_for(@nancyatterapp, url: app_update_path(@current_app.id)) do |f| %>
                  <%= f.label :"アプリ名", class: "mt-3" %>
                  <%= f.text_field :app_name, class: "form-control" %>
                  <%= f.label :"メインテキスト", class: "mt-3" %>
                  <%= f.text_field :main_text, class: "form-control" %>
                  <%= f.label :"紹介文", class: "mt-3" %>
                  <%= f.text_area :introduction, class: "form-control" %>
                  <%= f.label :"利用ルール", class: "mt-3" %>
                  <%= f.text_area :loure, class: "form-control" %>
                  <%= tag.div f.label :"カテゴリー", class: "mt-3" %>
                  <%= f.collection_select :appcategory_id, Appcategory.all, :id, :category_name, {include_blank: "選択してください"},{class: "form-control input-sm"} %>
                  <%= tag.div f.label :"SNSトップ画像", class: "mt-3" %>
                  <%= f.file_field :app_image %>
                  <%= tag.div f.label :"いいね機能", class: "mt-3" %>
                  <%= f.select :feature_like, [["いる","implement"], ["いらない",nil]], include_blank: "選択して下さい" %>
                  <%= tag.div f.label :"コメント機能", class: "mt-3" %>
                  <%= f.select :feature_comment, [["いる","implement"], ["いらない",nil]], include_blank: "選択して下さい" %>
                  <%= tag.div f.label :"画像投稿", class: "mt-3" %>
                  <%= f.select :feature_image, [["いる","implement"], ["いらない",nil]], include_blank: "選択して下さい" %>
                  <%= tag.div f.label :"カテゴリー選択", class: "mt-3" %>
                  <%= f.select :feature_category, [["いる","implement"], ["いらない",nil]], include_blank: "選択して下さい" %>
                  <%= tag.div f.submit :"設定変更", class: "btn btn-primary mt-3" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>