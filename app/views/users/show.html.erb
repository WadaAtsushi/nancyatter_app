<div class="container mx-auto" style="margin-top: 40px">
 <%= tag.h1 "#{@user.name}のマイページです" %>
  <div class="card" style="float: left">
    <%= tag.p "利用しているアプリ", class:"card-header" %>
      <% if @user.menburs %>
        <% @user.menburs.each do |menbur| %>
            <div class="card-body" >
              <div class="card-image">
                <%= image_tag menbur.nancyatterapp.app_image.url %>
              </div>
              <div class="card-text" >
                <%= tag.p "アプリ名： #{menbur.nancyatterapp.app_name}", class:"card-title" %>
                <%= tag.p "ユーザー： #{@user.name}" %>
                <%= tag.p "ニックネーム： #{menbur.nickname}" %>
              </div>
              <div class="user-show-card-btn">
                <%= link_to("アプリへ", app_login_path(menbur.nancyatterapp.id), class: "btn btn-primary") %>
              </div>
            </div>
        <% end %>
      <% end %>
  </div>
</div>